@model IEnumerable<Escuela1.Models.Maestro>

@{
    ViewData["Title"] = "Index";
}

<h1>Listado de Maestros</h1>

<p>
    <a asp-action="Create">Agregar Nuevo Docente</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellidos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Correo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nup)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellidos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Correo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nup)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdProfesor">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IdProfesor">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.IdProfesor">Dar de baja</a>
            </td>
        </tr>
}
    </tbody>
</table>
